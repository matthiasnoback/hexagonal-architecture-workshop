{% extends "@layout/default.html.twig" %}

{% block title %}Meetups{% endblock %}

{% block content %}
    {% if session.isLoggedInUserOrganizer() %}
        <p><a href="{{ path("schedule_meetup") }}" class="btn btn-success">Schedule meetup</a></p>
    {% endif %}

    <h1>Upcoming meetups</h1>

    <div class="upcoming-meetups">
    {% for meetup in upcomingMeetups %}
        <div class="panel panel-primary meetup">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="{{ path("meetup_details", { 'id' : meetup.meetupId }) }}" class="name">{{ meetup.name }}</a>
                </h3>
            </div>
            <div class="panel-body">
                <p><small>{{ meetup.scheduledFor|date() }}</small></p>
                <p><a href="{{ path("meetup_details", { 'id' : meetup.meetupId }) }}" class="btn btn-success read-more">Read more</a></p>
            </div>
        </div>
    {% else %}
        <p>No upcoming meetups</p>
    {% endfor %}
    </div>
{% endblock %}
