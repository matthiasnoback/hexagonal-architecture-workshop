{% extends "@layout/default.html.twig" %}

{% block title %}Schedule a meetup{% endblock %}

{% block content %}
    <h1>Schedule a meetup</h1>

    <form method="post" action="{{ url('schedule_meetup') }}">
        <div class="form-group{% if formErrors["name"] is defined %} has-error{% endif %}">
            <label for="name">Name:</label>
            <input class="form-control{% if formErrors["name"] is defined %} is-invalid{% endif %}" id="name" name="name" type="text"
                   value="{{ formData["name"]|default("") }}"/>
            {% for error in formErrors["name"]|default({}) %}
                <div class="invalid-feedback">{{ error }}</div>
            {% endfor %}
        </div>
        <div class="form-group{% if formErrors["description"] is defined %} has-error{% endif %}">
            <label for="description">Description:</label>
            <textarea class="form-control{% if formErrors["description"] is defined %} is-invalid{% endif %}" id="description"
                      name="description">{{ formData["description"]|default("") }}</textarea>
            {% for error in formErrors["description"]|default({}) %}
                <div class="invalid-feedback">{{ error }}</div>
            {% endfor %}
        </div>
        <div class="form-group {% if formErrors["scheduleForDate"] is defined %} has-error{% endif %}">
            <label for="scheduleForDate">Schedule for date: </label>
            <input class="form-control" name="scheduleForDate" id="scheduleForDate" type="date"
                   value="{{ formData["scheduleForDate"]|default("") }}">
        </div>
        <div class="form-group {% if formErrors["scheduleForTime"] is defined %} has-error{% endif %}">
            <label for="scheduleForTime">Time: </label>
            <input class="form-control{% if formErrors["scheduleFor"] is defined %} is-invalid{% endif %}" name="scheduleForTime" id="scheduleForTime" type="time"
                   value="{{ formData["scheduleForTime"]|default("") }}">
            {% for error in formErrors["scheduleFor"]|default({}) %}
                <div class="invalid-feedback">{{ error }}</div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary">Schedule this meetup</button>
    </form>
{% endblock %}
